<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.users.UserInfoActivity">

    <ImageView
        android:id="@+id/userInfoProfiile"
        android:layout_width="141dp"
        android:layout_height="123dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="33dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/userInfoTextView"
        app:layout_constraintEnd_toStartOf="@+id/pointEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379"
        tools:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/userInfoTextView"
        android:layout_width="0dp"
        android:layout_height="403dp"
        android:layout_marginBottom="32dp"
        android:autoText="false"
        android:fontFamily="monospace"
        android:lineSpacingExtra="8sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePointButton" />

    <EditText
        android:id="@+id/pointEditText"
        android:layout_width="185dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:foregroundGravity="top|left"
        android:inputType="textPersonName"
        android:text="Point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userInfoProfiile"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changePointButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/userInfoProfiile"
        app:layout_constraintTop_toBottomOf="@+id/pointEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>